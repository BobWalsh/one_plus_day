<%= content_for :title, "Items" %>
<%= turbo_stream_from :items %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Items</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500 dark:text-gray-300/75">Sort by:</span>
        <%= sortable @items, :day_id, "Day", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :name, "Name", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :isdone, "Isdone", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :hasslot, "Hasslot", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :notes, "Notes", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :url, "Url", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :tags, "Tags", class: "text-gray-700 dark:text-gray-300 mr-1" %>
        <%= sortable @items, :slot_number, "Slot number", class: "text-gray-700 dark:text-gray-300 mr-1" %>
      </div>
    </div>

    <%= link_to t("scaffold.new.title", model: "Item"), new_item_path, class: "btn btn-secondary" %>
  </div>

  <%= tag.div id: ("items" if first_page?), class: "bg-white dark:bg-gray-900 dark:border dark:border-gray-700 rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "items/item", collection: @items, as: :item, cached: true %>

    <div class="hidden only:block text-center">
      <p class="mb-4 h3">Create your first Item</p>
      <%= link_to t("scaffold.new.title", model: "Item"), new_item_path, class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
